#python solution for leetcode problem 1700 

class Solution(object):
    def countStudents(self, students, sandwiches):
        hungry0 = students.count(0)  
        hungry1 = students.count(1)

        for i in sandwiches:
            if i == 0:
                if hungry0 == 0:  
                    return hungry1
                hungry0 -= 1
            else:  
                if hungry1 == 0:   
                    return hungry0
                hungry1 -= 1

        return 0
